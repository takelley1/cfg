browser "firefox --new-tab %u"

color background          white   black
color listnormal          white   black
color listfocus           white   color232
color listnormal_unread   cyan    black
color listfocus_unread    cyan    color232
color info                white   color232   dim
color article             white   black

# Automatic feed reloads.
auto-reload yes
reload-threads 100

# Don't show hidden articles rather than deleting them.
ignore-mode "display"

unbind-key DOWN
bind-key j down

unbind-key UP
bind-key k up

unbind-key l
bind-key l open

bind-key h quit

unbind-key END
bind-key G end

unbind-key HOME
bind-key g home
