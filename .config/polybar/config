[colors]
;background = ${xrdb:color0:#222}
;background = #222
background = #000
background-alt = #444
;foreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground = #eeeeee
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
;bottom = true

#override-redirect = true
#wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

separator = |

line-size = 1
line-color = #f00

border-size = 2
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 3

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=9;2"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=9;2"

modules-left = i3
modules-center = 
modules-right = packages share disk io memory swap cpu-temp load brightness volume cpu battery date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[module/packages]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/packages.sh
interval = 600
format-underline = #dddddd

[module/share]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/share.sh
interval = 600
format-underline = #dddddd

[module/disk]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/disk.sh
interval = 600
format-underline = #dddddd

[module/io]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/io.sh
interval = 5
format-underline = #dddddd

[module/memory]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/memory.sh
interval = 5
format-underline = #dddddd

[module/swap]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/swap.sh
interval = 10
format-underline = #dddddd

[module/cpu-temp]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/cpu-temp.sh
interval = 10
format-underline = #dddddd

[module/load]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/load.sh
interval = 10
format-underline = #dddddd

[module/brightness]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/brightness.sh
interval = 1
format-underline = #dddddd

[module/volume]
type = custom/script
exec = /home/austin/.config/i3/scripts/status-bar/volume.sh
interval = 1
format-underline = #dddddd

[module/cpu]
type = internal/cpu
interval = 5
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = #dddddd
;format-underline = #dfdfdf
label = %percentage:2%%

[module/date]
type = internal/date
interval = 5
date = "%a  %Y-%m-%d"
time = " %H:%M"
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5
label = %date% %time%

[module/battery]
type = internal/battery
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ACAD
label-NAME = test
label = test
format-charging = <label-charging>
label-charging = Charging %percentage%%
poll-interval = 5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

