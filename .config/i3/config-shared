
##############################################################################
# SHARED CONFIG
##############################################################################

# STARTUP

 # force screen to lock when system is suspended, which occurs whenever the lid is shut
   # run "systemctl enable go-luks-suspend.service" and comment out the below line to enable luks-suspend
   #   https://github.com/guns/go-luks-suspend
   # using xss-lock instead of luks-suspend is faster and more reliable, but less secure
   exec xss-lock ~/.config/i3/scripts/xss-locker.sh

 # run notification daemon
   exec dunst -config ~/.config/dunst/dunstrc &
 # turn down microphone
   exec --no-startup-id amixer set Capture 0%

# KEYBOARD

 # set super key as main modifier
   set $mod Mod4
 # set keyboard key repeat delay
   exec_always xset r rate 200 45
 # rebind caps lock to right arrow
   exec xmodmap -e "clear lock"               # remove original function of caps lock
   #exec xmodmap -e "keysym Caps_Lock = Right" # assign the right arrow key to caps lock (for fish shell completion)

 # start apps automatically
   exec --no-startup-id i3-msg 'workspace 1: firefox; exec firefox'
   exec --no-startup-id i3-msg 'workspace 2: terminal; exec alacritty'
   exec --no-startup-id i3-msg 'workspace 5; exec discord'

 # hide side borders
   hide_edge_borders both

# FORMATTING

 # top border colors
   # class                 border  backgr. text    indicator child_border
   client.focused          #00ff00 #285777 #ffffff #00ff00   #00ff00
   client.focused_inactive #888888 #888888 #000000 #484e50   #5f676a
   client.unfocused        #888888 #888888 #000000 #292d2e   #222222
   client.urgent           #2f343a #900000 #ffffff #900000   #900000
   client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
   client.background       #000000

 # (default backups)
   # class                  border  backgr. text    indicator child_border
   #client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
   #client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
   #client.unfocused        #333333 #222222 #888888 #292d2e   #222222
   #client.urgent           #2f343a #900000 #ffffff #900000   #900000
   #client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
   #client.background       #ffffff

   # make certain windows floating for pycharm testing of bots
   for_window [title="feh"] floating enable
   #for_window [title="OCVBot"] floating enable
   #for_window [title="ocvbot"] floating enable

   # force ikvm viewer to be fixed
   for_window [title="iKVM\ Viewer"] floating disable

   # force pycharm commit window to be fixed, since it likes to move around
   for_window [title="Commit\ Changes"] floating disable
   # same thing with the git push window
   for_window [title="Push\ Commits"] floating disable
   # and the settings window
   for_window [title="Settings"] floating disable

# HOTKEYS

 # volume controls
   bindsym XF86AudioLowerVolume exec ~/.config/i3/scripts/volume-down.sh
   bindsym XF86AudioRaiseVolume exec ~/.config/i3/scripts/volume-up.sh
   bindsym XF86AudioMute exec amixer set Master 0%

   #bindsym F11 exec amixer set Master 2%-
   #bindsym F12 exec amixer set Master 2%+

   bindsym $mod+Down exec ~/.config/i3/scripts/volume-down.sh
   bindsym $mod+Up exec ~/.config/i3/scripts/volume-up.sh

 # lock screen
   bindsym $mod+Control+x exec ~/.config/i3/scripts/xss-locker.sh
 # sleep
   bindsym $mod+Control+s exec systemctl suspend

 # take screenshot with printscreen key and name with timestamp
   bindsym 0xff61 exec --no-startup-id ~/.config/i3/scripts/screenshot.sh
 # super-s will also take a screenshot
   bindsym $mod+s exec --no-startup-id ~/.config/i3/scripts/screenshot.sh

 # app launch hotkeys
   # terminal emulator (config file is ~/.config/alacritty/alacritty.yml)
   bindsym $mod+Return exec alacritty
   # backup terminal emulator (config file is ~/.Xdefaults)
   bindsym $mod+Shift+Return exec urxvt
   # rofi app launcher
   bindsym $mod+d exec rofi -show run -lines 20
   # backup app launcher
   bindsym $mod+Shift+d exec dmenu

   bindsym $mod+i exec firefox
   bindsym $mod+g exec gimp
   bindsym $mod+p exec pycharm
   bindsym $mod+v exec vncviewer

 # detect caps lock activation
   mode "caps"
     {
     bindsym Caps_Lock mode "default"
     }
   bindsym Caps_Lock mode "caps"

 # reload the configuration file
   bindsym $mod+Control+c reload
 # restart i3 inplace (preserves layout/session, can be used to upgrade i3)
   bindsym $mod+Control+r restart
 # exit i3 (logs out of X session)
   bindsym $mod+Mod1+Control+e exec i3-msg exit

# WINDOW MANIPULATION

 # window resizing
 # "Mod1" is alt
   bindsym $mod+Mod1+h resize shrink width 20 px
   bindsym $mod+Mod1+k resize grow height 20 px
   bindsym $mod+Mod1+j resize shrink height 20 px
   bindsym $mod+Mod1+l resize grow width 20 px

 # use Mouse+$mod to drag floating windows to their wanted position
   floating_modifier $mod

 # kill focused window
   bindsym $mod+Shift+k kill

 # change focus
   bindsym $mod+h focus left
   bindsym $mod+j focus down
   bindsym $mod+k focus up
   bindsym $mod+l focus right

 # move focused window
   bindsym $mod+Control+h move left
   bindsym $mod+Control+j move down
   bindsym $mod+Control+k move up
   bindsym $mod+Control+l move right

 # split in horizontal orientation
  #bindsym $mod+Mod1+Shift+h split h

 # split in vertical orientation
   #bindsym $mod+v split v

 # enter fullscreen mode for the focused container
  #bindsym $mod+f fullscreen toggle

 # toggle tiling / floating
   bindsym $mod+f floating toggle

 # change focus between tiling / floating windows
  #bindsym $mod+space focus mode_toggle

 # focus the parent container
  #bindsym $mod+a focus parent

 # focus the child container
  #bindsym $mod+d focus child

 # switch between the two most recently-used workspaces
   bindsym $mod+Tab workspace back_and_forth
 # cycle through workspaces
   bindsym $mod+Shift+Tab workspace prev

   bindsym $mod+1 workspace 1: firefox
   bindsym $mod+2 workspace 2: terminal
   bindsym $mod+3 workspace 3
   bindsym $mod+4 workspace 4
   bindsym $mod+5 workspace 5
   bindsym $mod+6 workspace 6
   bindsym $mod+7 workspace 7
   bindsym $mod+8 workspace 8
   bindsym $mod+9 workspace 9
   bindsym $mod+0 workspace 10

 # move focused container to workspace
   bindsym $mod+Control+1 move container to workspace 1: firefox
   bindsym $mod+Control+2 move container to workspace 2: terminal
   bindsym $mod+Control+3 move container to workspace 3
   bindsym $mod+Control+4 move container to workspace 4
   bindsym $mod+Control+5 move container to workspace 5
   bindsym $mod+Control+6 move container to workspace 6
   bindsym $mod+Control+7 move container to workspace 7
   bindsym $mod+Control+8 move container to workspace 8
   bindsym $mod+Control+9 move container to workspace 9
   bindsym $mod+Control+0 move container to workspace 10

# main status bar
bar {
     status_command i3blocks -c /home/austin/.config/i3/i3blocks.conf
     colors {
            statusline               #eeeeee
            focused_workspace        #00ff00 #285777 #ffffff
            urgent_workspace         #333333 #222222 #888888
            }
    }

