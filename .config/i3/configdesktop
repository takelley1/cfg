# CUSTOM HOTKEYS ########################################
  
 # new resizing hotkeys to remove 'resize mode'
 # 'Mod1' is alt
   bindsym $mod+Mod1+h resize shrink width 5 px or 5 ppt
   bindsym $mod+Mod1+k resize grow height 5 px or 5 ppt
   bindsym $mod+Mod1+j resize shrink height 5 px or 5 ppt
   bindsym $mod+Mod1+l resize grow width 5 px or 5 ppt

 # volume controls
   bindsym $mod+Down exec amixer set Master 3%-
   bindsym $mod+Up exec amixer set Master 3%+

   bindsym XF86AudioLowerVolume exec amixer set Master 3%-
   bindsym XF86AudioRaiseVolume exec amixer set Master 3%+
   bindsym XF86AudioMute exec amixer set Master toggle
  
 # brightness controls
   bindsym F2 exec brightness-
   bindsym F3 exec brightness+

 # app hotkeys
   bindsym $mod+r exec terminator -e ranger
   bindsym $mod+i exec firefox

