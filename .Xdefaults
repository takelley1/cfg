!! appearance
URxvt.font: xft:Dejavu Sans Mono:pixelsize=18
!!URxvt.boldFont: -*-rissole-*
!!URxvt.italicFont: -*-rissole-*
!!URxvt.boldItalicfont: -*-rissole-*
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.internalBorder: 10
URxvt.cursorBlink: false
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

!! navigation
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

!! extensions
URxvt.perl-ext-common: default,matcher,-option-popup,-selection-popup,-realine,tabbedex,clipboard,font-size,url-select,keyboard-select

!! extension for font-resizing - requires https://github.com/majutsushi/urxvt-font-size
URxvt.keysym.C-+:      font-size:increase
URxvt.keysym.C--:      font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

!! extension for tabs - requires urxvt-tabbedex from the AUR
URxvt.tabbed.autohide: true
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.keysym.Control-k: perl:tabbedex:next_tab
URxvt.keysym.Control-j: perl:tabbedex:prev_tab

URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard

!! 'M' is equal to 'Control-Alt'
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1

URxvt.loginShell:true
URxvt.transparent:false
URxvt.scrollstyle:plain
URxvt.secondaryScroll:true
URxvt.matcher.button: 1

! how many lines you want it to save per session
URxvt.saveLines:32767
URxvt.troughColor:#000000

